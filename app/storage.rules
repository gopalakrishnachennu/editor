rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User uploads - each user can manage their own folder
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 50 * 1024 * 1024 // 50MB max for HD
        && request.resource.contentType.matches('image/.*');
    }
    
    // Post images - users can access their own post images
    match /posts/{postId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024 // 50MB max for HD
        && request.resource.contentType.matches('image/.*');
    }
    
    // Brand kit logos
    match /brandKits/{kitId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024 // 50MB max
        && request.resource.contentType.matches('image/.*');
    }
    
    // Public templates - anyone can read
    match /templates/{templateId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024; // 50MB max
    }
  }
}
